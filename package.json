{
  "name": "ngx",
  "displayName": "ngx",
  "description": "ngx",
  "version": "0.0.1",
  "publisher": "dadigua",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "engines": {
    "vscode": "^1.15.0"
  },
  "main": "./out/src/extension",
  "activationEvents": [
    "onCommand:extension.sayHello",
    "onLanguage:ngx",
    "onLanguage:html"
  ],
  "categories": [
    "Languages","Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "html",
        "aliases": [
          "ngx"
        ],
        "extensions": [
          ".ngx"
        ]
      }
    ],
    "grammars": [
      {
        "language": "html",
        "scopeName": "source.ngx",
        "path": "./syntaxes/ngx.tmLanguage.json",
        "embeddedLanguages": {
          "text.html": "html",
          "source.css": "css",
          "source.js": "javascript",
          "source.python": "python",
          "source.smarty": "smarty",
          "source.ts": "typescript"
        }
      }
    ]
  },
  "dependencies": {
    "typescript": "^2.4.2",
    "vscode": "^1.1.5"
  },
  "devDependencies": {
    "@types/node": "^8.0.26"
  }
}